<div class="header">
  <h2>Submit A New Product</h2>
</div>
<hr>

<%= @product.errors.full_messages.join(" ") %>

<%= form_for @product do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
<br>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
<br>
  <div>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <%= f.submit %>

<% end %>
